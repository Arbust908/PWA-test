{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom", "es2017", "WebWorker"],
        "types": ["vite/client", "node", "element-plus/global"],
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/main.ts", "vite-plugin-pwa/client"],
    "exclude": [
        "dist",
        "node_modules",
        "test",
        "test.ts",
        "**/*.spec.ts",
        "**/*.worker.ts"
      ]
}
